.block
  .secondary-navigation
    %ul.wat-cf
      %li.first.active=link_to pat(:list), url(:memes, :index)
      %li=link_to pat(:new), url(:memes, :new)
  .content
    %h2.title
      =pat(:all)
      =mt(:memes)
    .inner
      %table.table
        %tr
          %th.first=mat(:meme, :_type)
          %th=mat(:meme, :_id)
          %th=mat(:meme, :created_at)
          %th=mat(:meme, :updated_at)
          %th=mat(:meme, :slug)
          %th=mat(:meme, :name)
          %th=mat(:meme, :image)
          %th.last="&nbsp;"
        -@memes.each do |meme|
          %tr
            %td.first=meme._type
            %td=meme._id
            %td=meme.created_at
            %td=meme.updated_at
            %td=meme.slug
            %td=meme.name
            %td=meme.image
            %td.last
              =button_to pat(:edit), url(:memes, :edit, :id => meme.id), :method => :get, :class => :button_to
              ="|"
              =button_to pat(:delete), url(:memes, :destroy, :id => meme.id), :method => :delete, :class => :button_to, :onsubmit => "return confirm('#{pat(:confirm)}')"
      .actions-bar.wat-cf
        .actions="&nbsp;"

-content_for :sidebar, partial("base/sidebar")
